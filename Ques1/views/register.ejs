<!doctype html>
<html lang="en">

<head>
  <title>Register Page</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>
  <header>
    <!-- place navbar here -->
  </header>
  <main>
    <!-- <form action="/registerData" method="post"> -->
    <form name="frmRegister" method="post" enctype="multipart/form-data">
      <div class="text-center">
        <h3 class="fw-bold text-uppercase pt-4">Sign Up</h3>
      </div>
      <div class="d-flex flex-row align-items-center mb-2">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <label class="form-label mb-0" for="form3Example1c">Name: <span id="err_uname"
              class="text-danger">*</span></label>
          <input type="text" id="uname" name="uname" class="form-control shadow-sm" placeholder="abc123" />
        </div>
      </div>

      <div class="d-flex flex-row align-items-center mb-2">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <label class="form-label mb-0" for="form3Example3c">Email: <span id="err_uemail"
              class="text-danger">*</span></label>
          <input type="email" id="uemail" name="uemail" placeholder="abc123@gmail.com" class="form-control shadow-sm" />
        </div>
      </div>

      <div class="d-flex flex-row align-items-center mb-2">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <label class="form-label mb-0" for="form3Example4c">Password: <span id="err_uPWD"
              class="text-danger">*</span></label>
          <input type="password" id="uPWD" name="uPWD" class="form-control shadow-sm" />
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mb-2">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <label class="form-label mb-0" for="form3Example4c">Profile: <span id="err_uPWD"
              class="text-danger">*</span></label>
          <input type="file" id="uProfile" name="uProfile" class="form-control shadow-sm"  multiple="multiple"/>
        </div>
      </div>
      <!-- <div class="d-flex flex-row align-items-center mb-2">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <label class="form-label mb-0" for="form3Example4c">Signature : <span id="err_uSignature"
              class="text-danger">*</span></label>
          <input type="file" id="uSignature" name="uSignature" class="form-control shadow-sm" multiple="multiple" />
        </div>
      </div> -->

      <div class="d-flex justify-content-center w-100 mt-5 mb-3 mb-lg-4">
        <button type="submit" id="registerBtn" name="registerBtn"
          class="btn text-uppercase btn-primary fw-bold btn-lg ">
          SIGN UP
        </button>
      </div>
    </form>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
    </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>

  <script src="/javascript/jquery.js"></script>
  <script src="/javascript/main.js"></script>
</body>

</html>